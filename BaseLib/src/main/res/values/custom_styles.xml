<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 自定义Dialog -->
    <style name="Custom_Progress" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="dialog_confirm_btn1" parent="weight_wrap">
        <item name="android:padding">@dimen/w_10</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:minHeight">@dimen/w_40</item>
        <item name="android:background">@drawable/btn_bg_rect_app_gray</item>
        <item name="android:textColor">@color/tv_click_textcolor_g_to_b</item>
    </style>
    <style name="dialog_confirm_btn2" parent="weight_wrap">
        <item name="android:padding">@dimen/w_10</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:minHeight">@dimen/w_40</item>
        <item name="android:background">@drawable/bg_orange_rcbtn</item>
        <item name="android:textColor">@color/tv_click_textcolor_w_to_h</item>
    </style>
    <style name="dialog_confirm_btn3" parent="wrap_wrap">
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/w_10</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:minHeight">@dimen/w_40</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:background">@drawable/bg_orange_rcbtn</item>
        <item name="android:textColor">@color/tv_click_textcolor_w_to_h</item>
    </style>
</resources>